@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        function ValidateU() {
            var isAllValid = true;
            $('#pageloader').show();
            $('.error').remove();

          //  debugger;
            var ADVID = $('#ADVID').val().trim();

            if (ADVID.length < 1) {
                $('#ADVID').after('<span class="text-danger error">مطلوب </span>');
                $('#ADVID').focus();
                isAllValid = false;
            }

            var pro = $('#PROJECTID').val().trim();

            if (pro.length < 1) {
                $('#PROJECTID').after('<span class="text-danger error">مطلوب </span>');
                $('#PROJECTID').focus();
                isAllValid = false;
            }

            var UNITCODE = $('#UNITCODE').val();
            if (UNITCODE.length < 1) {
                $('#UNITCODE').after('<span class="text-danger error">مطلوب </span>');
                $('#UNITCODE').focus();
                isAllValid = false;
            }

            var mainadv = $('#MyMainADv').val();
            var ADVID = $('#ADVID').val();

            if (mainadv != ADVID) {
                // $('#attachmentsdiv').hide();
                if ($('#OTHER_ATTACHMENT_NAME')[0].files.length === 0) {
                    $('#OTHER_ATTACHMENT_NAME').after('<span class="text-danger error">مطلوب</span>');
                    $('#OTHER_ATTACHMENT_NAME').focus();
                    // return false;
                    isAllValid = false;
                }
            }

            if (isAllValid) {
                $('#pageloader').show();
            } else {
                $('#pageloader').hide();
                $('#ReservUnit').after('<span class="text-danger error"> يرجي إدخال كافة البيانات المطلوبة بالاعلي </span>');
                return false;
            }
            $('#pageloader').hide();

        }

        $(document).ready(function () {


            var mainadv = $('#MyMainADv').val();
            var ADVID = $('#ADVID').val();

            if (mainadv == ADVID) {
                $('#attachmentsdiv').hide();
            } else {
                $('#attachmentsdiv').show();
            }


            $("#ADVID").change(function () {


                var mainadv = $('#MyMainADv').val();
                var ADVID = $('#ADVID').val();

                if (mainadv == ADVID) {
                    $('#attachmentsdiv').hide();
                } else {
                    $('#attachmentsdiv').show();
                }

                $("#PROJECTID").empty();
                $("#UNITCODE").empty();
                $("#UNITCODE").append($('<option/>', {
                    value: "",
                    text: "اختر"
                }));
                //$("#PROJECTID").after('<img src="~/Content/spinner.gif"/>')
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetPRoJECTS", "Reservation")',
                    dataType: 'json',
                    data: { id: $("#ADVID").val() },
                    success: function (mems) {
                        $("#PROJECTID").append($('<option/>', {
                            value: "",
                            text: "اختر"
                        }));
                        $.each(mems, function (i, member) {
                            $("#PROJECTID").append('<option value="'
                        + member.Value + '">'
                        + member.Text + '</option>');
                        });
                    },
                    error: function (ex) {
                      //  debugger;
                        $('#Endsession').show();
                        // alert('برجاء انشاء الطلب مره اخري');
                    }
                });
                return false;
            });

            $("#PROJECTID").empty();
            $.ajax({
                type: 'POST',
